<h2>Exercises</h2>

<section>

    <ul>
        {{#if studentId}}

            {{#exercises}}
                <li><a href='#/students/{{../studentId}}/courses/{{../courseId}}/exercises/{{id}}/snapshots'>{{name}}</a></li>
            {{/exercises}}

        {{else}}

            {{#exercises}}
